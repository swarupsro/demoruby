<div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="mb-4">Log In</h2>

    <%= form_with(scope: :session, url: session_path, local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <p class="mt-3">
      Need a new account?
      <%= link_to "Sign up", new_user_path %>.
    </p>
  </div>
</div>

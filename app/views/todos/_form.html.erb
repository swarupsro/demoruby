<%= form_with(model: todo, class: "needs-validation") do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true, autofocus: true, placeholder: "Run time-based probe [[SqliProbe]]" %>
    <div class="form-text">
      Titles containing the marker <code><%= SimulatedInjectionService.delay_marker %></code> trigger the simulated delay.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4, required: true %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :completed, class: "form-check-input" %>
    <%= form.label :completed, class: "form-check-label" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
  <%= link_to "Back", todos_path, class: "btn btn-link" %>
<% end %>
